# OpenAI API Key
OPENAI_API_KEY=your_openai_api_key_here

# Slack Bot Token
SLACK_BOT_TOKEN=xoxb-your-token-here

# Slack Signing Secret
SLACK_SIGNING_SECRET=your_signing_secret_here

# Slack Channel ID
SLACK_CHANNEL_ID=C1234567890

# Gmail credentials
GMAIL_USER=your_email@gmail.com
GMAIL_PASS=your_app_password_here

# Google Drive
# 方法1: JSONファイルの内容を環境変数に設定（推奨・Kudu不要）
GOOGLE_CREDENTIALS_JSON={"installed":{"client_id":"...","project_id":"...","auth_uri":"...","token_uri":"...","auth_provider_x509_cert_url":"...","client_secret":"...","redirect_uris":["http://localhost"]}}
# 方法2: ファイルパスを指定（Kudu経由で配置が必要）
GOOGLE_CREDENTIALS_PATH=/home/site/wwwroot/client_secret_xxx.json
GOOGLE_DRIVE_FOLDER_ID=your_folder_id_here

# Notta Google Drive連携
NOTTA_DRIVE_FOLDER_ID=your_notta_records_folder_id_here
GOOGLE_DRIVE_WATCH_ENABLED=true