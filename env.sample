# OpenAI API Key
OPENAI_API_KEY=your_openai_api_key_here

# Slack Bot Token
SLACK_BOT_TOKEN=xoxb-your-token-here

# Slack Signing Secret
SLACK_SIGNING_SECRET=your_signing_secret_here

# Slack Channel ID
SLACK_CHANNEL_ID=C1234567890

# Gmail credentials
GMAIL_USER=your_email@gmail.com
GMAIL_PASS=your_app_password_here

# Google Drive（サービスアカウント認証）
# 方法1: サービスアカウントJSONファイルの内容を環境変数に設定（推奨・Kudu不要）
GOOGLE_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"...","private_key_id":"...","private_key":"...","client_email":"...","client_id":"...","auth_uri":"...","token_uri":"...","auth_provider_x509_cert_url":"...","client_x509_cert_url":"..."}
# 方法2: サービスアカウントJSONファイルパスを指定（Kudu経由で配置が必要）
GOOGLE_SERVICE_ACCOUNT_PATH=/home/site/wwwroot/service-account-key.json
GOOGLE_DRIVE_FOLDER_ID=your_folder_id_here

# Notta Google Drive連携
NOTTA_DRIVE_FOLDER_ID=your_notta_records_folder_id_here
GOOGLE_DRIVE_WATCH_ENABLED=true